    vintf_fragments: ["aidl/android.hardware.power-service.oplus.xml"],
    vendor: true,
    shared_libs: [
        "android.hardware.power-V4-ndk",
        "libbase",
        "libcutils",
        "liblog",
        "libutils",
        "libbinder_ndk",
